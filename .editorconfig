#
# EditorConfig for saur-ssg
# https://editorconfig.org

root = true

# ─────────────────────────────────────────────────────────────────────────────
# Default settings for all files
# ─────────────────────────────────────────────────────────────────────────────
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# JavaScript/TypeScript
# ─────────────────────────────────────────────────────────────────────────────
[*.{js,ts,jsx,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# ─────────────────────────────────────────────────────────────────────────────
# Scheme files
# ─────────────────────────────────────────────────────────────────────────────
[*.scm]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# Nickel configuration
# ─────────────────────────────────────────────────────────────────────────────
[*.ncl]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# Nix files
# ─────────────────────────────────────────────────────────────────────────────
[*.nix]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# YAML/JSON configuration
# ─────────────────────────────────────────────────────────────────────────────
[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# Documentation
# ─────────────────────────────────────────────────────────────────────────────
[*.{md,adoc}]
indent_size = 2
trim_trailing_whitespace = false  # Preserve intentional trailing spaces in markdown

# ─────────────────────────────────────────────────────────────────────────────
# Makefiles and Justfiles
# ─────────────────────────────────────────────────────────────────────────────
[{Makefile,Justfile,Mustfile}]
indent_style = tab
indent_size = 4

# ─────────────────────────────────────────────────────────────────────────────
# Shell scripts
# ─────────────────────────────────────────────────────────────────────────────
[*.{sh,bash,zsh}]
indent_size = 2

[hooks/*]
indent_size = 2

# ─────────────────────────────────────────────────────────────────────────────
# Container files
# ─────────────────────────────────────────────────────────────────────────────
[{Containerfile,Dockerfile}]
indent_size = 4

# ─────────────────────────────────────────────────────────────────────────────
# Git files
# ─────────────────────────────────────────────────────────────────────────────
[.git*]
indent_size = 4
